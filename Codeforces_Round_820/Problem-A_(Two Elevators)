#include<bits/stdc++.h>
using namespace std;
#define ll long long
int main()
{
    ll t;
    cin>>t;
    cin.ignore();
    while(t--)
    {
        ll a,b,c;
        cin>>a>>b>>c;

        ll ans=INT_MAX;
        if(b>c)
        {
            a=(a-1);
            b=(b-c);
        }
        else
        {
            a=(a-1);
            b=(c-b);
        }

        if(c>1)
        {
            b+=c-1;
        }


        if(a<b)
        {
            ans=1;
        }
        else if(a>b)
        {
            ans=2;
        }
        else
        {
            ans=3;
        }

        cout<<ans<<endl;
    }
    return 0;
}

