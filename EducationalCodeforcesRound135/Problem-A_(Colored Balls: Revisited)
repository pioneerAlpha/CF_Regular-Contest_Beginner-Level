#include<bits/stdc++.h>
using namespace std;
#define ll long long
int main()
{
    ll t;
    cin>>t;
    while(t--)
    {
        ll n;
        cin>>n;
        ll value=0;
        int ind=INT_MAX;
        for(int i=0;i<n;i++)
        {
            int x;
            cin>>x;
            if(value<=x)
            {
                value=x;
                ind=i+1;
            }
        }
        cout<<ind<<endl;
    }
    return 0;
}

