Problem Link - https://codeforces.com/contest/1716/problem/A


#include<bits/stdc++.h>
using namespace std;
#define ll long long
int main()
{
    ll t;
    cin>>t;
    while(t--)
    {
        ll n;
        cin>>n;
        ll ans=0;
        if(n==0)
        {
            ans=0;
        }
        else if(n==1)
        {
            ans=2;
        }
        else if(n==2)
        {
            ans=1;
        }
        else
        {
            if(n%3==0)
            {
                ans=n/3;
            }
            else
            {
                ans=(n/3)+1;
            }
        }

        cout<<ans<<endl;
    }
    return 0;
}



Solution link - https://codeforces.com/contest/1716/submission/166962705
